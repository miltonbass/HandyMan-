<MatCard Class="service-details-card">
    <div class="service-details-image">
        <img src="@temporalOrder.Service.Photo" alt="Foto del Servicio">
    </div>
    <MatCardContent>
        <div class="service-details-header">
            <h3 class="service-details-title">Información del Pago  <b>$ @temporalOrder.Service.Price</b></h3>
        </div>
        <div class="service-details-content">
            <MatTextField Label="Nombre en la Tarjeta" TValue="string" Class="form-field" Required="true"/>
            <MatTextField Label="Número de Tarjeta" TValue="string" Class="form-field" Required="true"/>
            <MatTextField Label="Fecha de Expiración (MM/YY)" TValue="string" Class="form-field" Required="true"/>
            <MatTextField Label="CVV" TValue="string" Class="form-field" Required="true"/>

             <MatDialogActions>
                <MatButton Type="button" OnClick="CloseModalAsync" >No Gracias</MatButton>
                <MatButton Type="submit" Raised="true" OnClick=@(() => SubmitPayment()) >Realizar Pago</MatButton>
            </MatDialogActions>
        </div>
    </MatCardContent>
</MatCard>






<style>

.service-details-card {
    width: 100%;
    max-width: 400px; 
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
    background-color: #ffffff;
}

.service-details-card:hover {
    transform: translateY(-5px);
}

/* Estilos para la imagen del servicio */
.service-details-image {
    height: 200px; /* Altura de la imagen */
    overflow: hidden;
}

.service-details-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
}

/* Estilos para el encabezado de los detalles del servicio */
.service-details-header {
    padding: 1rem;
    border-bottom: 1px solid #e0e0e0;
}

.service-details-title {
    margin: 0;
    font-size: 1.5rem;
    color: #333333;
}

/* Estilos para el contenido de los detalles del servicio */
.service-details-content {
    padding: 1.5rem;
}

/* Estilos para los elementos individuales de los detalles del servicio */
.service-details-item {
    margin-bottom: 1rem;
    font-size: 1rem;
    color: #666666;
}

.service-details-item strong {
    margin-right: 0.5rem;
    color: #333333;
}

.form-field {
    width: 80%;
    margin-bottom: 1rem;
}


</style>
